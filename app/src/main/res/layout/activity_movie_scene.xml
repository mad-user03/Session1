<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#332973"
    tools:context=".MovieScene">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <RelativeLayout
            android:id="@+id/relativescrolltwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:scaleX="1.2"
                android:scaleY="1.2"
                app:srcCompat="@drawable/moviewscene" />

            <ImageView
                android:id="@+id/imageViewAlpha"
                android:layout_width="match_parent"
                android:layout_height="390dp"
                android:rotation="270"
                android:scaleX="1.2"
                android:scaleY="1.2"
                app:srcCompat="@drawable/gradient" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="The Magicians"
                android:textColor="@color/white"
                android:textSize="20dp" />

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="38dp"
                android:background="@color/invisiable"
                app:srcCompat="@drawable/arrowbutton" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="320dp"
                android:layout_marginTop="42dp"
                app:srcCompat="@drawable/eight" />

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="41dp"
                android:layout_height="31dp"
                android:layout_marginLeft="365dp"
                android:layout_marginTop="33dp"
                android:background="@color/invisiable"
                app:srcCompat="@drawable/chat" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="60dp"
                android:text="Cмотреть"
                android:textColor="@color/white"
                android:textSize="26dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_below="@id/textView5"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/playimage" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView9"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Описание"
                android:textColor="@color/white"
                android:textSize="26dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView9"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="65dp"
                android:text="В сериале рассказывается о судьбе Квентина Колдуотера и его друзей, которые учатся вместе в школе волшебства Брейкбилс. На протяжении 5 сезонов друзья сталкиваются со множеством препятствий, решают квесты, спасают магию и друг друга. Действие первого сезона происходит в школе, во втором сезоне герои открывают для себя волшебный мир Филори и действие частично переносится туда."
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView7"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Кадры"
                android:textColor="@color/white"
                android:textSize="26dp"

                android:textStyle="bold" />

            <HorizontalScrollView
                android:id="@+id/horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/textView8"
                android:layout_marginTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/imageView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/ph1" />

                    <ImageView
                        android:id="@+id/imageView13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="310dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/ep2" />

                    <ImageView
                        android:id="@+id/imageView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="160dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/ep1" />
                </RelativeLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/horizontal"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Эпизоды"
                android:textColor="@color/white"
                android:textSize="26dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView11"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:srcCompat="@drawable/ep1" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView21"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="5dp"
                android:text="2016"
                android:textColor="#AFAFAF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView22"
                android:layout_marginLeft="170dp"
                android:text="Пирл расследует инцидент в Брейкбиллс и дисциплинарные..."
                android:textColor="#AFAFAF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView15"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="20dp"
                android:text="Источник магии"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView14"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="5dp"
                android:text="2015"
                android:textColor="#AFAFAF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView15"
                android:layout_marginLeft="170dp"
                android:text="Квентин и Джулия приглашены на тест их волшебных навыков..."
                android:textColor="#AFAFAF"
                android:textSize="10dp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/textView11"
                android:layout_marginLeft="170dp"
                android:layout_marginTop="20dp"
                android:text="Нелегальная магия"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView15"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="40dp"
                app:srcCompat="@drawable/ep2" />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="match_parent"
                android:layout_height="227dp"
                android:layout_below="@id/textView5"
                android:layout_marginTop="10dp"
                android:alpha="0.4"
                android:rotation="0"
                app:srcCompat="@drawable/gradient" />

            <ImageButton

                android:id="@+id/imageButton3"
                android:layout_width="match_parent"
                android:layout_height="227dp"
                android:layout_below="@id/textView5"
                android:layout_marginTop="11dp"
                android:background="@color/invisiable"
                android:onClick="playButton"
                app:srcCompat="@drawable/playmoviescene" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_above="@id/textView5"
                android:layout_marginLeft="20dp"
                android:text="Фэнтези"
                android:textSize="10dp" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_above="@id/textView5"
                android:layout_marginLeft="115dp"
                android:text="Приключения"
                android:textSize="10dp" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_above="@id/textView5"
                android:layout_marginLeft="240dp"
                android:text="Сша"
                android:textSize="10dp" />
            <Button
                android:id="@+id/button11"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@+id/button9"
                android:layout_marginLeft="20dp"
                android:text="Телесериал"
                android:textSize="10dp" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/invisiable"
                android:layout_below="@id/imageButton3"
                android:layout_marginLeft="380dp"
                android:layout_marginTop="-20dp"
                app:srcCompat="@drawable/voldown" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@color/invisiable"
                android:layout_below="@id/imageButton3"
                android:layout_marginTop="-20dp"
                android:layout_marginLeft="10dp"
                android:text="00:00"
                android:textSize="10dp"/>

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="302dp"
                android:layout_height="16dp"
                android:layout_below="@id/imageButton3"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="-20dp"
                app:srcCompat="@drawable/lowtr" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>